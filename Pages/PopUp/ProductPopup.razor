@using Microsoft.AspNetCore.Components

<RadzenDatePicker TValue="DateTime" ShowTime="true" TimeOnly="true" DateFormat="HH:mm" @bind-Value="model"></RadzenDatePicker>

<RadzenButton Click=@(args => OnManageSubscriptionSubmit()) Variant="Variant.Outlined">Save</RadzenButton>

@code {
    [Parameter]
    public EventCallback<DateTime> SubscriptionStateChanged { get; set; }

    private DateTime model = DateTime.Now;

    private async Task OnManageSubscriptionSubmit()
    {
        await SubscriptionStateChanged.InvokeAsync(model);
    }
}
